expr   1      \&    2            #  1
expr   3      \&    0            #  0
expr   0      \&    4            #  0
expr   0      \&    0            #  0

expr $((5-3)) \& $(( 1+7))       #  2
expr $((5-5)) \& $((17+3))       #  0

expr ""       \& "hello"         #  
expr "goodby" \& "hello"         # goodby
